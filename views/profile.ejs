<html lang="en">
    <%- include('./partials/head.ejs') %> 


<body>

    <header>
        

        <%- include('./partials/navv.ejs') %> 



        <main class="main-pic">
            
            <div class="pics">
                

                <div class="text4">
                    <h2><%= info.fullName %> </h2>
                    <h3><%= info.email %> </h3></div>

            </div>
        </main>

